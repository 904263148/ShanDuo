<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.LinkManFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btn_go_chat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOCHAT1"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/btn_go_chat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOCHAT2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_go_chat1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="@string/sign_in"/>

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_in"/>

        <Button
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="modify"
            />

        <Button
            android:id="@+id/maptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="maptext"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_pd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布动态"
        />

</RelativeLayout>