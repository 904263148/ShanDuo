<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:background="@drawable/app_commonroof"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <FrameLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="11dp"
            >

            <ImageButton
                android:layout_marginLeft="10dp"
                android:background="@color/colorAccent"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_com_delete"
                android:layout_gravity="left|center"
                />

            <TextView
                android:textSize="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainfont"
                android:text="普通置顶" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/imagebutton"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="32dp"
                    android:textColor="@color/tab_indicator_color"
                    />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="12dp"
                    android:textColor="@color/tab_indicator_color"
                    />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/12小时"
                    android:textSize="12dp"
                    android:textColor="@color/mainfont"
                    />


            </LinearLayout>

            <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/icon_com_balance"
                android:text="\t余额支付"
                android:textColor="@drawable/fontcolor_selector"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_com_wechat"
                    android:text="\t微信支付"
                    android:textColor="@drawable/fontcolor_selector"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="\t支付宝支付"
                    android:drawableLeft="@drawable/icon_com_alipay"
                    android:textColor="@drawable/fontcolor_selector"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textColor="@color/textview_text"
                    android:text="开通VIP置顶费用低至1.5元！"/>

                <TextView
                    android:textColor="@color/textcolor_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="去开通>>"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:background="@drawable/popwindow_button_shape"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:text="取消"
                    android:textColor="@color/textcolor_textview"/>

                <Button
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/popwindow_button_back_shape"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:textSize="12dp"
                    android:text="确认支付"
                    android:textColor="@color/colorAccent"
                    />


            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</LinearLayout>
