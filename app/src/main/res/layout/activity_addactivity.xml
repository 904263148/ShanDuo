<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <FrameLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:layout_gravity="left|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_editing"
            android:drawableLeft="@drawable/icon_return"
            android:text="发布活动" />

    </FrameLayout>

    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_theme"/>

        <EditText
            android:id="@+id/et_add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="主题"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_o_female"/>

        <EditText
            android:id="@+id/et_add_numberofgirls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="女生人数"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_male"/>

        <EditText
            android:id="@+id/et_add_Numberofboys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="男生人数"
            android:inputType="phone"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_location"/>

        <TextView
            android:id="@+id/tv_add_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="xx市xx区xx街"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_date"/>

        <TextView
            android:id="@+id/tv_add_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="活动开始日期"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_end"/>

        <TextView
            android:id="@+id/tv_add_Deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="报名截止时间"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_consumption"/>

        <TextView
            android:id="@+id/et_add_Modeofconsumption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="消费方式"
            android:paddingLeft="9dp"
            android:background="@null"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp"
            />

    </LinearLayout>

    <FrameLayout
        android:background="@drawable/textview_but"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        >

        <ImageView
            android:paddingLeft="9dp"
            android:paddingTop="31dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_remarks"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_settopa"
                />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="点击置顶" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_add_Remarks"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="right|center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="14dp"
            android:background="#f4f4f4"
            android:gravity="left"
            android:hint="备注:"
            android:padding="5dp"
            android:textColor="@color/textview_text_color"
            android:textSize="17dp" />

    </FrameLayout>

    <Button
        android:id="@+id/but_add_Releaseactivities"
        android:layout_marginTop="21dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:background="@drawable/textview_but"
        android:text="发布活动"/>

</LinearLayout>
