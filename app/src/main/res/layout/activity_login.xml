<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".ui.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/icon_return_black" />


        <LinearLayout
            android:id="@+id/ll_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去注册"
                android:textSize="15dp"
                />

        </LinearLayout>


    </RelativeLayout>


    <ImageView
        android:id="@+id/img_head"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_user"
        android:layout_marginTop="100dp"
        />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/img_head"
        android:layout_marginTop="46dp"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/et_name"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_editview"
            android:hint="手机号"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/iv_name"
            android:textCursorDrawable="@drawable/cursor_color"
            />

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/rl_name"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/et_password"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_editview"
            android:hint="输入登录密码"
            android:textSize="14dp"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/cursor_color"
            />

        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_password"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_forget"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_pwd"
        android:layout_marginTop="15dp"
        android:gravity="center"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="@color/font_color_gray"
            android:textSize="13dp"
            />


        <TextView
            android:id="@+id/tv_go_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有账号?"
            android:textColor="@color/font_color_gray"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            />

    </RelativeLayout>
    
    
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_confrim"
        android:layout_below="@+id/rl_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="立即登录"
        android:textColor="@color/color_white"
        />
    

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/login_bottom_bg"
        />


</RelativeLayout>