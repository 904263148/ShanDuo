                    android:textSize="@dimen/egg_font_size"
                    android:textColor="@color/home_title_color"
                    />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/egg_font_size"
                    android:textColor="@color/home_title_color"
                    android:layout_marginLeft="3dp"
                    android:text="10000"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:id="@+id/tv_svip"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="SVIP2"
                    android:textSize="7sp"
                    android:background="@drawable/rounded_tv_vip"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    />


                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="25dp"
                    android:layout_height="10dp"
                    android:text="LV90"
                    android:textSize="7sp"
                    android:background="@drawable/rounded_tv_level"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/tv_friend_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好友"
                    android:layout_marginLeft="2dp"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tv_act_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:layout_marginLeft="25dp"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动"
                    android:layout_marginLeft="2dp"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tv_trend_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_marginLeft="25dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:layout_marginLeft="2dp"
                    android:textSize="10sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


