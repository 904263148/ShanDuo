<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="编辑资料"
            android:textColor="@color/color_editing"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:text="保存"
            android:textColor="@color/selector_color"
            android:textSize="20dp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:background="@drawable/app_ib_headportrait_shape"
            android:scaleType="fitXY"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/modify_et_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="玥玥"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/icon_image"
            android:text="@string/app_updeta_replace"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/background_color"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="基本资料"
            android:textColor="@color/color_editing"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="闪多号"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/modify_tv_flicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="1515"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="0.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="性别"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/modify_tv_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="男"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="0.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="出生日期"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:onClick="dateDisplay"
                android:paddingRight="15dp"
                android:text="1995-5-1"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="0.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="感情状态"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_Emotionalstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="保密"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@color/background_color"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="个人信息"
            android:textColor="@color/color_editing"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="个性签名"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_Personalitysignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="玩"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="0.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="家乡"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_Hometown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="保密"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="0.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="职业"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_Occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="保密"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="0.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:text="学校"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_School"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:drawableRight="@drawable/icon_forward"
                android:paddingRight="15dp"
                android:text="保密"
                android:textColor="@color/textview_text_color"
                android:textSize="12sp" />

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
